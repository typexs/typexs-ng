{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build/out-tsc/spec",
    "target": "es5",
    "moduleResolution": "node",
    "types": [
      "mocha",
      "node"
    ],
    "paths": {
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
      ]
    }
  },
  "files": [
    "src/app/test.ts",
    "src/app/polyfills.ts"
  ],
  "include": [
    "src/app/**/*.spec.ts",
    "src/modules/**/*.spec.ts",
    "src/modules/**/*.d.ts"
  ]
}
