{
  "compilerOptions": {
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "esModuleInterop": true,
    "outDir": "./build/compiled",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "pretty": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@typexs/base-ng/*": [
        "./packages/base-ng/src/*",
        "./packages/base-ng/src"
      ],
      "@typexs/ng-forms/*": [
        "./packages/ng-forms/src/*",
        "./packages/ng-forms/src"
      ],
      "@typexs/storage-ng/*": [
        "./packages/storage-ng/src/*",
        "./packages/storage-ng/src"
      ],
      "@typexs/ng-router-menu/*": [
        "./packages/ng-router-menu/src/*",
        "./packages/ng-router-menu/src"
      ],

    }
  },
  "exclude": [
    "archive",
    "build",
    "dist",
    "tmp",
    "src/**/files",
    "node_modules"
  ],
  "compileOnSave": true
}
