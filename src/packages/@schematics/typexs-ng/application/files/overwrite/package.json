{
  "name": "<%= utils.dasherize(name) %>",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"ng serve -pc proxy.conf.json --open\" \"typexs server start\"",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.10",
    "@angular/common": "^5.2.10",
    "@angular/compiler": "^5.2.10",
    "@angular/core": "^5.2.10",
    "@angular/forms": "^5.2.10",
    "@angular/http": "^5.2.10",
    "@angular/platform-browser": "^5.2.10",
    "@angular/platform-browser-dynamic": "^5.2.10",
    "@angular/router": "^5.2.10",<% if (serviceWorker) { %>
    "@angular/service-worker": "^5.2.10",<% } %><% if (bootstrapCss) { %>
    "@ng-bootstrap/ng-bootstrap": "^1.1.2",
    "bootstrap": "^4.1.0",<% } %>
    "core-js": "^2.5.5",
    "rxjs": "^5.5.10",
    "zone.js": "^0.8.26",
    "typexs-ng":"<%= typexs_ng_version %>"
  },
  "devDependencies": {
    "@angular/cli": "<%= angular_cli_version %>",
    "@angular/compiler-cli": "^5.2.10",
    "@angular/language-service": "^5.2.10",<% if (!minimal) { %>
    "@types/node": "~9.4.0",
    "@types/gulp": "^4.0.5",
    "gulp-typescript": "^4.0.2",
    "gulpclass": "^0.1.2",
    "codelyzer": "~4.2.1",
    "karma": "~2.0.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-chrome-launcher": "~2.2.0",
    <% if (testFramework === 'mocha') { %>
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "^5.1.0",
    "mocha-typescript": "^1.1.12",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0",
    <% } else if (testFramework === 'jasmine') { %>
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    <% } %>
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "protractor": "~5.3.1",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",<% } %>
    "typescript": "~2.6.2",
    "typescript-require": "^0.2.10"
  },
  "typexs":{
    "name":"<%= utils.dasherize(name) %>"
  }
}
